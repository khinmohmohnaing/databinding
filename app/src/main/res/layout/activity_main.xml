<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="temp"
                type="com.example.databindingsampleapp.TemperatureData" />
        <variable name="AppPresenter" type="com.example.databindingsampleapp.MainPresenter">

        </variable>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{temp.location+temp.celsius}"
                android:onClick="@{() -> AppPresenter.add()}"
                />
    </LinearLayout>
</layout>

